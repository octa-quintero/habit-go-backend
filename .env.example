# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================

# Puerto en el que corre el servidor backend
# Por defecto: 3000
PORT=3000

# URL del frontend para configurar CORS
# Desarrollo: http://localhost:3001
# Producción: https://tu-dominio.com
FRONTEND_URL=http://localhost:3001


# ================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ================================

# Secreto para firmar los tokens JWT
# IMPORTANTE: Usar un valor aleatorio y seguro en producción
# Ejemplo: openssl rand -base64 32
# Mínimo 32 caracteres recomendado
JWT_SECRET=tu-super-secreto-jwt-cambiar-en-produccion-muy-largo-y-seguro

# ================================
# CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL)
# ================================

# Puerto de PostgreSQL
# Por defecto: 5432
DB_PORT=5432

# Host del servidor de base de datos
# Desarrollo: localhost
# Producción: IP o dominio del servidor
DB_HOST=localhost

# Nombre de usuario de PostgreSQL
DB_USERNAME=postgres

# Contraseña del usuario de PostgreSQL
DB_PASSWORD=tu_password_aqui

# Nombre de la base de datos
DB_NAME=habit_go_db

# ¿Borrar y recrear la BD en cada inicio? (SOLO DESARROLLO)
# true: Borra todos los datos y recrea las tablas (PELIGROSO)
# false: Mantiene los datos existentes (RECOMENDADO)
# IMPORTANTE: Siempre usar 'false' en producción
DB_MIGRATE_DATA=false
