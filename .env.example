# ================================
# BASE DE DATOS (PostgreSQL)
# ================================
DB_PORT=5432
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=tu_password_aqui
DB_NAME=habit_go_db
DB_MIGRATE_DATA=false

# ================================
# GOOGLE OAUTH
# ================================
# Obtener credenciales en: https://console.cloud.google.com/
# 1. Crear proyecto
# 2. Habilitar Google+ API
# 3. Crear credenciales OAuth 2.0
# 4. Agregar URL de callback: http://localhost:3000/auth/google/callback

GOOGLE_CLIENT_ID=tu-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ================================
# EMAIL (SMTP)
# ================================
# Configuración para Gmail:
# 1. Activar verificación en 2 pasos en tu cuenta de Gmail
# 2. Generar contraseña de aplicación en: https://myaccount.google.com/apppasswords
# 3. Usar esa contraseña en EMAIL_PASSWORD

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password-de-16-caracteres
EMAIL_FROM_NAME=Habit Go
EMAIL_SECURE=false
